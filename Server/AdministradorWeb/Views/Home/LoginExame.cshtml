@model AdministradorWeb.Models.LoginViewModel

@{ Layout = null; }

<!DOCTYPE html>

<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Images/iconeLabOn.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <title>@Configurador.NomeSistema | Login</title>

    <link href="~/css/font.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/material-dashboard.min.css?v=2.0.2" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <style type="text/css">
    </style>
</head>

<body class="off-canvas-sidebar">
    <div class="wrapper wrapper-full-page">
        <div class="page-header login-page header-filter" filter-color="black" style="background-image: url('../images/fundo_login_labon.jpg'); background-size: cover; background-position: top center;" data-color="green" >
            <div class="container">
                <div class="col-lg-4 col-md-6 col-sm-6 ml-auto mr-auto">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form", role = "form", id = "frmLogin" }))
                    {
                        <div id="divLogin" class="card card-login card-hidden" style="width: 400px;">
                            <div class="card-header card-header-denatran bg-azul text-center">
                                <span class="form-row d-inline">
                                    <img src="~/Images/iconeLabOn.png" alt="" class="img-fluid" width="50">
                                    <span style="font-size: 18px;margin-top: 13px;">&nbsp;&nbsp;@Configurador.NomeSistema</span>
                                </span>
                            </div>
                            <div class="card-body" style="height: 110px !important;">
                                <div class="bmd-form-group" style="margin-top: -20px !important;">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">face</i>
                                            </span>
                                            <div class="form-group col-md-12" style="margin-left: -15px;">
                                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Usuário", required = "required", @style = "width: 300px;" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="bmd-form-group" style="margin-top: -20px !important;">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                            <div class="form-group col-md-12" style="margin-left: -15px;">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Senha", required = "required", @style = "width: 300px;" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer justify-content-center">
                                <button id="btnEntrarExame" type="button" class="btn btn-warning ripple" value="Login">Entrar</button>
                                <img id="imgEntrar" src="~/Images/loading.gif" width="50" height="50" class="d-none" />
                            </div>
                        </div>
                    }
                </div>
            </div>

            <footer class="footer">
                <div class="container mb-0">
                    <div class="copyright text-center" style="font-size:0.8em; color: lightgray; margin-top: 50px !important;">
                        <img src="~/images/logo-hackatran.png" width="100" height="30" alt="" />
                        <p>@Configurador.Orgao</p>
                        <div class="clearfix"></div>
                        <p style="margin-top: -25px;">
                            &copy;
                            <script>document.write(new Date().getFullYear())</script>
                            <span class="font-weight-bold">Equipe ZEUS</span>
                        </p>
                    </div>
                </div>
            </footer>
        </div>


    </div>


    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/popper.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-material-design.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.reject.js"></script>
    <script type="text/javascript" src="~/js/reject.js"></script>
    <script type="text/javascript" src="~/js/demo.js"></script>
    <script type="text/javascript" src="~/js/sweetalert2.js"></script>
    <script type="text/javascript" src="~/js/custom.js"></script>
    <script type="text/javascript" src="~/js/framework.js"></script>
    <script type="text/javascript" src="~/js/classes/login.js"></script>
    <script type="text/javascript" src="~/js/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.validate.custom.pt-BR.js"></script>
    <script type="text/javascript" src="~/js/jquery.validate.unobtrusive.dynamic.js"></script>
    
</body>
</html>