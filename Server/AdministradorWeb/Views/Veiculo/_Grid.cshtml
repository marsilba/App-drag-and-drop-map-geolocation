@model List<AdministradorWeb.Repositorio.HackatranVeiculo>

@{ 
    Layout = null;
}

<style type="text/css">
    .grid-header {
        font-size: 14px !important;
    }

    .grid-body {
        font-size: 14px;
    }
</style>

<div class="card">
    <div class="card-header card-header-success card-header-icon">
        <div class="card-icon">
            <i class="material-icons">assignment</i>
        </div>
        <h4 class="card-title header-icons">Resultado da Pesquisa</h4>
    </div>

    <div class="card-body" style="font-size: small;">
        <div class="material-datatables">
            <table id="tblRelatorio" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="grid-header font-weight-bold w-30">MOTORISTA</th>
                        <th class="grid-header font-weight-bold w-250">CNH</th>
                        <th class="grid-header font-weight-bold w-20">PLACA</th>
                        <th class="grid-header font-weight-bold w-10 text-center">COMPRIMENTO (m)</th>
                        <th class="grid-header font-weight-bold w-10 text-center">LARGURA (m)</th>
                        <th class="grid-header font-weight-bold w-10 text-center">ALTURA (m)</th>
                        <th class="grid-header font-weight-bold w-10 text-center">PESO (t)</th>
                        <th class="grid-header font-weight-bold w-10 text-center">AÇÕES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-uppercase">
                            <td class="grid-body w-30">@item.Motorista</td>
                            <td class="grid-body w-20">@item.Cnh</td>
                            <td class="grid-body w-20">@item.Placa</td>
                            <td class="grid-body w-10 text-center">@item.Comprimento</td>
                            <td class="grid-body w-10 text-center">@item.Largura</td>
                            <td class="grid-body w-10 text-center">@item.Altura</td>
                            <td class="grid-body w-10 text-center">@item.Peso</td>
                            <td class="grid-body w-10 text-center">
                                <span class="d-inline-flex">
                                    <button type="button" class="btn btn-link btn-info btn-just-icon" onclick="javascript: editar(@item.Id)">
                                        <i class="material-icons" data-toggle="tooltip" data-placement="top" title="Editar">edit</i>
                                    </button>
                                    <button type="button" class="btn btn-link btn-danger btn-just-icon" onclick="javascript: excluir(@item.Id)">
                                        <i class="material-icons" data-toggle="tooltip" data-placement="top" title="Excluir">delete_forever</i>
                                    </button>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>